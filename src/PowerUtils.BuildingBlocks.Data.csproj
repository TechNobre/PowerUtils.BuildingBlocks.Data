<Project Sdk="Microsoft.NET.Sdk">

  <!-- Assembly details -->
  <PropertyGroup>
    <ProjectGuid>614bff4e-29aa-4727-a5ce-86f6a1b13a1d</ProjectGuid>

    <!-- Assembly and projecto details -->
    <!-- https://docs.microsoft.com/en-us/dotnet/standard/frameworks -->
    <TargetFrameworks>net6.0;net5.0;netstandard2.0;netstandard2.1;net462;net48;netcoreapp3.1</TargetFrameworks>


    <AssemblyName>PowerUtils.BuildingBlocks.Data</AssemblyName>
    <RootNamespace>PowerUtils.BuildingBlocks.Data</RootNamespace>

    <Version>1.0.0</Version>

    <PackageOutputPath>bin\</PackageOutputPath>
  </PropertyGroup>


  <!-- Package details -->
  <PropertyGroup>
    <CurrentYear>$([System.DateTime]::UtcNow.ToString(yyyy))</CurrentYear>
    
    <PackageId>PowerUtils.BuildingBlocks.Data</PackageId>
    <title>PowerUtils.BuildingBlocks.Data</title>
    <Product>PowerUtils.BuildingBlocks.Data</Product>

    <Authors>Nelson Nobre</Authors>
    <Company>TechNobre</Company>

    <License>MIT</License>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Copyright Â© $(CurrentYear) by TechNobre</Copyright>

    <Description>Helpers to work with data layers</Description>
    <Summary>Helpers to work with data layers</Summary>
    <PackageTags>PowerUtils;Utils;Helpers;DDD;CleanArchitecture;Data;DataBase;Repository;Repositories;UnitOfWork</PackageTags>
    <PackageProjectUrl>https://github.com/TechNobre/PowerUtils.BuildingBlocks.Data</PackageProjectUrl>
    <NeutralLanguage>en-GB</NeutralLanguage>

    <PackageIcon>logo_128x128.png</PackageIcon>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/TechNobre/PowerUtils.BuildingBlocks.Data</RepositoryUrl>
  </PropertyGroup>


  <!-- DOCUMENTATION -->
  <PropertyGroup>
    <DocumentationFile>bin\PowerUtils.BuildingBlocks.Data.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Prevent XML documentation warnings -->
  </PropertyGroup>


  <!-- Tests -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(AssemblyName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>


  <ItemGroup Condition="'$(Configuration)'=='Release'">
    <None Include="..\assets\logo\logo_128x128.png" Pack="true" PackagePath="" />
    <None Include="..\LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>


</Project>